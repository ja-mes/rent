<%= render 'shared/errors', obj: @customer %>

<%= form_for @customer do |f| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :middle_name %>
        <%= f.text_field :middle_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :company_name %>
        <%= f.text_field :company_name, class: "form-control" %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :phone %>
        <%= f.telephone_field :phone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :alt_phone, "Alt. Phone" %>
        <%= f.telephone_field :alt_phone, class: "form-control" %>
      </div>
    </div>
  </div>

  <%= f.hidden_field :customer_type, value: "blank" %>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %>

    <% unless @customer.new_record? || @customer.active == false %>
      <%= link_to 'Archive Customer', archive_customer_path(@customer), class: 'btn btn-warning' %>
    <% end %>
  </div>
<% end %>
