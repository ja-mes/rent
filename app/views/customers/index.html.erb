<%= render 'header' %>

<input class="form-control" placeholder="search..." style="margin-bottom: 30px" />

<table class="table table-hover row-links">
  <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Property</th>
      <th>Phone</th>
      <th>Balance</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr data-link="<%= customer_path customer %>" class="<%= customer.balance > 0 ? 'table-danger' : '' %> ">
        <td>
          <%= customer.full_name %>
        </td>
        <td>
          <%= customer.property.address %>, <%= customer.property.city %>, <%= customer.property.state %> <%= customer.property.zip %>
        </td>
        <td>
          <%= customer.phone %>
        </td>

        <td>
          <%= number_to_currency(customer.balance) %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
