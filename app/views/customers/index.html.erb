<%= render 'header' %>

<table class="table table-hover row-links">
  <thead>
    <tr>
      <th>Name</th>
      <th>Property</th>
      <th>Phone</th>
      <th>Balance</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr data-link="<%= customer_path customer %>">
        <td>
          <%= customer.full_name %>
        </td>
        <td>
          100 Foo St., Boaz AL 35950
        </td>
        <td>
          12124234
        </td>

        <td>
          $500.00
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
