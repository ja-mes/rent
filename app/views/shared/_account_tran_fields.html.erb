<div class="account_tran_fields">
  <div class="form-group">
    <%= f.hidden_field :_destroy %>
    <a href="#" class="remove_account_tran btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>
  </div>

  <div class="form-group">
    <%= f.label :account_id, "Account" %>
    <%= f.collection_select :account_id, @accounts, :id, :name, { include_blank: true }, class: "form-control chosen_select" %>
  </div>

  <div class="form-group">
    <%= f.label :amount, "Amount" %>
    <% f.object.amount *= -1 if dec && f.object.amount %>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <%= f.number_field :amount, placeholder: "0.00", value: number_with_precision(f.object.amount, precision: 2), step: 0.01, class: 'form-control account_tran_amount' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :memo, "Memo" %>
    <%= f.text_field :memo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :memo, "Property" %>
    <%= f.collection_select :property_id, @properties, :id, :full_address, { include_blank: true }, class: "form-control chosen_select" %>
  </div>

  <hr>
</div>
