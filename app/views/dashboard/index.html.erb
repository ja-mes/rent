<h1 class="margin-30">Summary</h1>

<div class="card">
  <div class="card-header">Net Income</div>
  <canvas id="netIncome" height="100"></canvas>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">Properties</div>
      <canvas id="myChart"></canvas>
    </div>
  </div>
</div>

<%= debug(@income) %>

<script>
  var ctx = document.getElementById('myChart');

  var data = <%= @income %>
  var properties = <%= @property_count %>
  console.log(properties)

  var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Rented properties', 'Vacant properties'],
      datasets: [{
        label: 'Properties',
        data: properties,
        backgroundColor: [
          'rgba(74, 255, 46, 0.3)',
          'rgba(255, 99, 132, 0.2)',
        ],
        borderColor: [
          'rgba(74, 255, 46, 1)',
          'rgba(255,99,132,1)',
        ],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true
          }
        }]
      }
    }
  });

  var netIncomeCtx = document.getElementById('netIncome');

  var data = {
    labels: ["February", "March", "April", "May", "June", "July"],
    datasets: [
      {
        label: "Net Income",
        fill: false,
        lineTension: 0.1,
        backgroundColor: "rgba(75,192,192,0.4)",
        borderColor: "rgba(75,192,192,1)",
        borderCapStyle: 'butt',
        borderDash: [],
        borderDashOffset: 0.0,
        borderJoinStyle: 'miter',
        pointBorderColor: "rgba(75,192,192,1)",
        pointBackgroundColor: "#fff",
        pointBorderWidth: 2,
        pointHoverRadius: 6,
        pointHoverBackgroundColor: "rgba(75,192,192,1)",
        pointHoverBorderColor: "rgba(220,220,220,1)",
        pointHoverBorderWidth: 2,
        pointRadius: 6,
        pointHitRadius: 10,
        data: data,
        spanGaps: false,
      }
    ]
  }

  var myLineChart = new Chart(netIncomeCtx, {
    type: 'line',
    data: data,
  });
</script>
