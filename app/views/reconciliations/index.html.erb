<%= render 'header' %>

<div class="margin-25">
  <%= link_to "Reconcile Now", new_reconciliation_path, class: "btn btn-primary" %>

  <% if @last_rec %>
    <%= link_to "Undo Previous Reconciliation", @last_rec, method: :delete, class: "btn btn-secondary" %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Ending Balance</th>
    </tr>
  </thead>

  <tbody>
    <thead>
      <% @reconciliations.each do |r| %>
        <tr>
          <td><%= r.date.strftime("%m/%d/%Y") %></td>
          <td><%= number_to_currency r.ending_balance %></td>
        </tr>
      <% end %>
    </thead>
  </tbody>
</table>
