<%= render 'customers/show_header' %>
<%= render 'shared/errors', obj: @payment %>

<%= form_for [@customer, @payment] do |f| %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, value: Time.now.strftime("%m/%d/%Y"), class: "form-control pickdate" %>
  </div>

  <div class="form-group">
    <%= f.label :amount %>
    <div class="input-group">
      <div class="input-group-addon">$</div>
      <%= f.number_field :amount, value: number_with_precision(f.object.amount, precision: 2), class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :memo %>
    <%= f.text_area :memo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
