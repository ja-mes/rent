<%= render 'header' %>

<table class="table table-hover row-links">
  <thead class="thead-default">
    <tr>
      <th>Name</th>
      <th>Balance</th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |a| %>
      <tr data-link="<%= account_path a %>">
        <td><%= a.name %></td>
        <td><%= number_to_currency(a.balance) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
