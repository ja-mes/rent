<%= render 'shared/errors', obj: @property %>

<%= form_for @property do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :rent, 'Rent Amount' %>
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <%= f.number_field :rent, value: number_with_precision(f.object.rent, precision: 2), step: 0.01, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :deposit, 'Deposit Amount' %>
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <%= f.number_field :deposit, value: number_with_precision(f.object.deposit, precision: 2), step: 0.01, class: "form-control" %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :state %>
        <% states = %w(AK AL AZ AR CA CO CT DE FL GA HI ID IL IN IA KS KY LA ME MD MA MI MN MS MO MT NE NV NH NJ NM NC ND OH OK OR PA RI SC SD TN TX UT VT VA WA WV WI WY) %>
        <%= f.select :state, options_for_select(states, @property.state), {}, class: "form-control" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= f.label :zip %>
        <%= f.text_field :zip, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
