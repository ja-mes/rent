<%= render 'header' %>

<table class="table table-hover row-links">
  <thead>
    <tr>
      <th>Address</th>
      <th>Rent Amount</th>
      <th>Deposit Amount</th>
      <th>Customer</th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr data-link="<%= property_path property %>">
        <td>
          <%= property.address %>
        </td>
        <td>
          $500
        </td>
        <td>
          $300
        </td>

        <td><%= property.customer.full_name %></td>

      </tr>
    <% end %>
  </tbody>
</table>
