<tr id="<%= recurring_tran.id %>">
  <td><%= recurring_tran.tran_type %></td>
  <td><%= truncate(recurring_tran.description, length: 30) %></td>

  <td>
    <% if recurring_tran.last_entry %>
      <%= recurring_tran.last_entry.strftime("%m/%d/%Y") %>
    <% end %>
  </td>

  <td><%= recurring_tran.next_entry_date.strftime("%m/%d/%Y") %></td>
  <td class="text-xs-right">
    <%= link_to edit_recurring_tran_path(recurring_tran), remote: true, class: "btn btn-secondary btn-sm" do %>
      <i class="fa fa-pencil"></i>
    <% end %>

    
    <%= link_to recurring_tran_path(recurring_tran), method: :delete, remote: true, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
